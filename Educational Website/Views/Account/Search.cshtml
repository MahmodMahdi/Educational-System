@using DataAccessLayer.Authentication
@model List<ApplicationUser>
@{
	var users = Model;
	Layout = "_Layout2";
}
<h1> Search by name :</h1>
<form asp-action="Search">
	<div class="form-group">
		<input type="text" name="searchString" />
		<input type="submit" asp-controller="Account" asp-action="Search" value="Search" class="btn btn-primary" /><br /><br />
		@if (Model.Any())
		{
			<hr />
			<div class="text-center fw-bold"><h2>Search Result :</h2></div>
			@for (int i = 0; i < users.Count; i++)
			{
				<div class="card shadow">

					<div class="card-body text-center shadow" style="background-color:lightgrey">
						<h3 class="card-title p-3">First Name : @users[i].FirstName</h3>
						<h3 class="card-title p-3">Last Name : @users[i].LastName</h3>
						<h4 class="card-text" style="color:blue">Role : @users[i].Role</h4>
						<h5 class="card-text" style="color:darkblue">Address : @users[i].Address</h5>
						<h4 class="card-text" style="color:blue">Email : @users[i].Email</h4>
					
					</div>
				</div>
			}
			<br />

			<hr />

			<br />
		}
		else
		{
			<br />	<div class="alert alert-warning">There are no items!</div>
		}
	</div>
</form>
<br />
<br />
<br />
<div class="text-center">
	<a asp-action="Index" asp-fragment="#" class="btn btn-success">Return back</a>
</div>
