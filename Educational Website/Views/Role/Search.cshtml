@using Microsoft.AspNetCore.Identity
@model List<IdentityRole>
@{
	var roles = Model;
	Layout = "_Layout2";
}
<h1> Search by name :</h1>
<form asp-action="Search">
	<div class="form-group"> 
		<input type="text" name="searchString" />
		<input type="submit" asp-controller="Role" asp-action="Search" value="Search" class="btn btn-primary" /><br /><br />
		@if (Model.Any())
		{
			<hr />
			<div class="text-center fw-bold"><h2>Search Result :</h2></div>
			@for (int i = 0; i < roles.Count; i++)
			{
				<div class="card shadow">

					<div class="card-body text-center shadow" style="background-color:lightgrey"> 
						<h3 class="card-title p-3"> Exist : @roles[i].Name</h3>

					</div>
				</div>
			}
			<br />

			<hr />

			<br />
		}
		else
		{
			<br />	<div class="alert alert-warning">There are no items!</div>
		}
	</div>
</form>
<br />
<br />
<br />
<div class="text-center">
	<a asp-action="GetRoles" asp-fragment="#" class="btn btn-success">Return back</a>
</div>

